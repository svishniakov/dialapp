<p>
  <% flash.each do |name, msg| %>
    <%= content_tag(:div, msg, class: "alert alert-danger") %>
  <% end %>
</p>

<h2 class="form-signup-heading">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-signup') do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Enter email" %>
  </div>

  <div class="form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Choose password" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Confirm password" %>
  </div>

  <div class="form-group">
    <%= f.submit "Sign up", class: 'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
